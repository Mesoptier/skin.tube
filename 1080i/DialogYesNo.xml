<?xml version="1.0" encoding="UTF-8"?>
<window id="100">
    <defaultcontrol always="true">10</defaultcontrol>

    <controls>
        <include>DialogBackground</include>

        <control type="group">
            <include>DialogAnimations</include>
            <control type="grouplist">
                <include>DialogContents</include>

                <!-- Title -->
                <control type="label" id="1">
                    <include>DialogTitle</include>
                </control>

                <!-- Message -->
                <control type="textarea" id="9">
                    <height>auto</height>

                    <font>MenuDescription</font>
                    <textcolor>Secondary</textcolor>

                    <align>center</align>
                </control>

                <!-- Buttons -->
                <control type="group">
                    <top>20</top>
                    <centerleft>50%</centerleft>
                    <width>340</width>
                    <height>60</height>

                    <!-- No -->
                    <control type="group">
                        <width>160</width>
                        <left>0</left>

                        <control type="group">
                            <visible>Control.HasFocus(10)</visible>
                            
                            <animation type="Visible" reversible="false">
                                <include>ActiveOverlayAnimation</include>
                            </animation>

                            <include>ActiveOverlay</include>
                        </control>

                        <!-- Button -->
                        <control type="button" id="10">
                            <onleft>11</onleft>
                            <onright>11</onright>

                            <align>center</align>
                            <textoffsety>13</textoffsety>

                            <font>MenuItemLabel</font>
                            <textcolor>Primary</textcolor>

                            <texturenofocus colordiffuse="BackgroundPrimary">solid.png</texturenofocus>
                            <texturefocus colordiffuse="BackgroundPrimary">solid.png</texturefocus>
                        </control>
                    </control>

                    <!-- Yes -->
                    <control type="group">
                        <width>160</width>
                        <right>0</right>

                        <control type="group">
                            <visible>Control.HasFocus(11)</visible>
                            
                            <animation type="Visible" reversible="false">
                                <include>ActiveOverlayAnimation</include>
                            </animation>

                            <include>ActiveOverlay</include>
                        </control>

                        <!-- Button -->
                        <control type="button" id="11">
                            <onleft>10</onleft>
                            <onright>10</onright>

                            <align>center</align>
                            <textoffsety>13</textoffsety>

                            <font>MenuItemLabel</font>
                            <textcolor>Primary</textcolor>

                            <texturenofocus colordiffuse="BackgroundPrimary">solid.png</texturenofocus>
                            <texturefocus colordiffuse="BackgroundPrimary">solid.png</texturefocus>
                        </control>
                    </control>

                </control>

            </control>
        </control>

    </controls>
                    
</window>
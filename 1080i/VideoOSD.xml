<?xml version="1.0" encoding="UTF-8"?>
<window id="2901">
    <defaultcontrol>18<!-- 4 --></defaultcontrol>

    <animation effect="Fade" start="0" end="100" time="300" tween="cubic" easing="out">WindowOpen</animation>
    <animation effect="Fade" start="100" end="0" time="150" delay="50" tween="cubic" easing="in">WindowClose</animation>

    <controls>

        <control type="button" id="11">
            <onfocus>Control.SetFocus(20)</onfocus>
        </control>
        <control type="button" id="21">
            <onfocus>Control.SetFocus(12)</onfocus>
        </control>

        <control type="group" id="4">
            <left>360</left>
            <right>360</right>
            <bottom>160</bottom>
            <height>90</height>

            <defaultcontrol>14</defaultcontrol>

            <control type="grouplist">
                <top>20</top>
                <left>0</left>
                <width>600</width>
                <height>70</height>

                <itemgap>20</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <orientation>horizontal</orientation>
                <align>left</align>

                <!-- Previous -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(12)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="12">
                        <onleft>11</onleft>
                        <onright>13</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-previous.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-previous.png</texturenofocus>

                        <onclick>PlayerControl(Previous)</onclick>
                    </control>
                </control>

                <!-- Rewind -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(13)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="13">
                        <onleft>12</onleft>
                        <onright>14</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-rewind.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-rewind.png</texturenofocus>

                        <onclick>PlayerControl(Rewind)</onclick>
                    </control>
                </control>

                <!-- Play / Pause -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(14)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="togglebutton" id="14">
                        <onleft>13</onleft>
                        <onright>15</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-play.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-play.png</texturenofocus>
                        <alttexturefocus colordiffuse="PlayerButtonIconFocus">icon-pause.png</alttexturefocus>
                        <alttexturenofocus colordiffuse="PlayerButtonIcon">icon-pause.png</alttexturenofocus>

                        <usealttexture>Player.Playing</usealttexture>
                        <onclick>PlayerControl(Play)</onclick>
                    </control>
                </control>

                <!-- Stop -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(15)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="15">
                        <onleft>14</onleft>
                        <onright>16</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-stop.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-stop.png</texturenofocus>

                        <onclick>PlayerControl(Stop)</onclick>
                    </control>
                </control>

                <!-- Forward -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(16)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="16">
                        <onleft>15</onleft>
                        <onright>17</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-forward.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-forward.png</texturenofocus>

                        <onclick>PlayerControl(Forward)</onclick>
                    </control>
                </control>

                <!-- Next -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(17)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="17">
                        <onleft>16</onleft>
                        <onright>18</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-next.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-next.png</texturenofocus>

                        <onclick>PlayerControl(Next)</onclick>
                    </control>
                </control>

            </control>

            <control type="grouplist">
                <top>20</top>
                <right>0</right>
                <width>600</width>
                <height>70</height>

                <itemgap>20</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <orientation>horizontal</orientation>
                <align>right</align>

                <!-- Subtitles -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(18)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="togglebutton" id="18">
                        <onleft>17</onleft>
                        <onright>19</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-subtitles.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-subtitles.png</texturenofocus>

                        <alttexturefocus colordiffuse="PlayerButtonIconFocus">icon-subtitles-active.png</alttexturefocus>
                        <alttexturenofocus colordiffuse="PlayerButtonIcon">icon-subtitles-active.png</alttexturenofocus>

                        <usealttexture>VideoPlayer.HasSubtitles</usealttexture>
                        <onclick>ActivateWindow(SubtitleSearch)</onclick>
                    </control>
                </control>

                <!-- Video options -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(19)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="19">
                        <onleft>18</onleft>
                        <onright>20</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-video.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-video.png</texturenofocus>

                        <onclick>-</onclick>
                    </control>
                </control>

                <!-- Audio options -->
                <control type="group">
                    <width>70</width>
                    <height>70</height>

                    <control type="image">
                        <animation condition="!Control.HasFocus(20)" type="Conditional">
                            <include>PlayerButtonBackEffect</include>
                        </animation>
                        <texture colordiffuse="PlayerButtonBack">solid.png</texture>
                    </control>

                    <!-- Button -->
                    <control type="button" id="20">
                        <onleft>19</onleft>
                        <onright>21</onright>

                        <centertop>50%</centertop>
                        <centerleft>50%</centerleft>
                        <width>32</width>
                        <height>32</height>

                        <texturefocus colordiffuse="PlayerButtonIconFocus">icon-audio.png</texturefocus>
                        <texturenofocus colordiffuse="PlayerButtonIcon">icon-audio.png</texturenofocus>

                        <onclick>-</onclick>
                    </control>
                </control>

            </control>
        </control>

    </controls>
</window>